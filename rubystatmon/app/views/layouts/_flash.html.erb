<% if notice %>
  <div class="bg-green-50 border border-green-300 text-green-700 px-4 py-2 rounded-md mb-4">
    ✅ <%= notice %>
  </div>
<% elsif alert %>
  <div class="bg-red-50 border border-red-300 text-red-700 px-4 py-2 rounded-md mb-4">
    ⚠️ <%= alert %>
  </div>
<% end %>
