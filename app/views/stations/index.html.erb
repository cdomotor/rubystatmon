<% content_for :title, "Stations" %>

<div class="max-w-5xl mx-auto px-4 py-6 space-y-6">
  <%= render "layouts/flash" %>

  <div class="flex justify-between items-center">
    <h1 class="text-3xl font-bold text-gray-800">ðŸ“¡ Stations</h1>
    <%= link_to "New station/s", new_station_path, class: "rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
  </div>

  <!-- Quick Pills -->
<%# File: app/views/stations/index.html.erb %>
<%# Full path: /app/views/stations/index.html.erb %>

<div class="flex flex-wrap gap-2">
  <%= link_to "All",
              stations_path(request.query_parameters.merge(status: nil)),
              class: ["inline-flex items-center rounded-full px-3 py-1 text-sm border",
                      @status.blank? ? "bg-blue-600 text-white border-blue-600"
                                     : "bg-white text-gray-700 border-gray-300 hover:bg-gray-50"].join(" ") %>

  <%= link_to "Reachable",
              stations_path(request.query_parameters.merge(status: "reachable")),
              class: ["inline-flex items-center rounded-full px-3 py-1 text-sm border",
                      @status == "reachable" ? "bg-blue-600 text-white border-blue-600"
                                              : "bg-white text-gray-700 border-gray-300 hover:bg-gray-50"].join(" ") %>

  <%= link_to "Unreachable",
              stations_path(request.query_parameters.merge(status: "unreachable")),
              class: ["inline-flex items-center rounded-full px-3 py-1 text-sm border",
                      @status == "unreachable" ? "bg-blue-600 text-white border-blue-600"
                                               : "bg-white text-gray-700 border-gray-300 hover:bg-gray-50"].join(" ") %>

  <%= link_to "Active",
              stations_path(request.query_parameters.merge(status: "active")),
              class: ["inline-flex items-center rounded-full px-3 py-1 text-sm border",
                      @status == "active" ? "bg-blue-600 text-white border-blue-600"
                                          : "bg-white text-gray-700 border-gray-300 hover:bg-gray-50"].join(" ") %>

  <%= link_to "Inactive",
              stations_path(request.query_parameters.merge(status: "inactive")),
              class: ["inline-flex items-center rounded-full px-3 py-1 text-sm border",
                      @status == "inactive" ? "bg-blue-600 text-white border-blue-600"
                                             : "bg-white text-gray-700 border-gray-300 hover:bg-gray-50"].join(" ") %>
</div>


  <!-- Filter Bar -->
  <div class="bg-white border border-gray-200 rounded-lg p-4">
    <%= form_with url: stations_path, method: :get, local: true,
                  html: { id: "filters-form", class: "flex flex-col sm:flex-row gap-3 items-start sm:items-end" } do %>
      <div class="w-full sm:w-1/2">
        <label for="q" class="block text-sm font-medium text-gray-700 mb-1">Search (name or IP)</label>
        <%= text_field_tag :q, params[:q], id: "q",
              placeholder: "e.g. Main Pond or 10.0.0.25",
              class: "w-full rounded-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500" %>
      </div>

      <div class="w-full sm:w-48">
        <label for="status" class="block text-sm font-medium text-gray-700 mb-1">Last Ping Status</label>
        <%= select_tag :status,
              options_for_select([["(Any)", ""], ["Reachable", "reachable"], ["Unreachable", "unreachable"]], params[:status]),
              id: "status",
              class: "w-full rounded-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500" %>
      </div>

      <div class="flex gap-2">
        <%= submit_tag "Filter", class: "rounded-md px-4 py-2 bg-indigo-600 text-white hover:bg-indigo-500 font-medium" %>
        <%= link_to "Clear", stations_path, class: "rounded-md px-4 py-2 bg-gray-100 text-gray-800 hover:bg-gray-200 font-medium" %>
      </div>
    <% end %>
  </div>
  <br>
  <!-- Results (Turbo Frame for instant filtering updates) -->
  <turbo-frame id="stations_list">
    <%= render partial: "list", locals: { stations: @stations } %>
  </turbo-frame>
</div>

<!-- Instant filters JS (debounced q; instant select/pills) -->
<script>
  (function(){
    const form   = document.getElementById('filters-form');
    const q      = document.getElementById('q');
    const status = document.getElementById('status');

    // Submit the form into the turbo-frame so only the list updates
    if (form) form.setAttribute('data-turbo-frame', 'stations_list');

    let t;
    function debounce(fn, ms){ return function(){ clearTimeout(t); t = setTimeout(fn, ms); }; }

    if (q) {
      q.addEventListener('input', debounce(() => form && form.requestSubmit(), 250));
    }
    if (status) {
      status.addEventListener('change', () => form && form.requestSubmit());
    }
  })();
</script>
