<% content_for :title, "New Station" %>

<div class="md:w-2/3 w-full space-y-8">
  <h1 class="font-bold text-4xl mb-6">New Station</h1>

  <!-- CSV Import -->
  <div class="bg-white shadow-md rounded-lg p-6">
    <h1 class="text-lg font-semibold text-blue-700 mb-4">
      Bulk import multiple stations from CSV
    </h1>
    <%= form_with url: import_stations_path,
                  method: :post,
                  local: true,
                  multipart: true,
                  class: "flex flex-col sm:flex-row items-start sm:items-center gap-4" do |form| %>
      <%= form.file_field :file,
            required: true,
            class: "block w-full text-sm text-gray-600
                    file:mr-4 file:py-2 file:px-4
                    file:rounded-md file:border-0
                    file:bg-blue-50 file:text-blue-700
                    hover:file:bg-blue-100" %>

      <%= form.submit "Import CSV",
            class: "px-4 py-2 bg-blue-600 hover:bg-blue-500
                    text-white rounded-md font-semibold" %>
    <% end %>
  </div>

  <!-- New Station Form -->
  <div class="bg-white shadow-md rounded-lg p-6">
    <h1 class="text-lg font-semibold text-blue-700 mb-4">
      Create a single new station
    </h1>
    <%= render "form", station: @station %>
  </div>
</div>
