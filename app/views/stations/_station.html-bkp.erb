<!-- Renders a single station row -->
<%= render "layouts/flash" %>

<div class="w-full">
  <p class="text-lg font-semibold"><%= station.name %></p>
  <p class="text-sm text-gray-500"><strong>IP:</strong> <%= station.ip_address %></p>
  <p class="text-sm text-gray-500"><strong>Location:</strong> <%= station.location %></p>
  <p class="text-sm text-gray-500"><strong>Notes:</strong> <%= station.notes %></p>
</div>
