<%# File: app/views/stations/_form.html.erb %>
<%# Path: /app/views/stations/_form.html.erb %>

<%= form_with model: @station, local: true do |form| %>
  <%# --- your existing fields go here --- %>

  <%# Example: name/ip fields, etc. %>
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
    <div>
      <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :name, class: "mt-1 w-full rounded-md border-gray-300 shadow-sm" %>
    </div>
    <div>
      <%= form.label :ip_address, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :ip_address, class: "mt-1 w-full rounded-md border-gray-300 shadow-sm" %>
    </div>
  </div>

  <%# --- Filestore ingest section (the block we just built earlier) --- %>
  <%# paste your entire Filestore Ingest section here unchanged %>

  <%# --- Submit --- %>
  <div class="mt-6">
    <%= form.submit (@station.persisted? ? "Save" : "Create"),
          class: "rounded-md bg-blue-600 text-white px-4 py-2 hover:bg-blue-700" %>
  </div>
<% end %>
