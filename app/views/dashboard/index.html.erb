<% content_for :title, "Dashboard" %>

<div class="p-6 space-y-8">

  <!-- Last seen -->
  <div class="text-sm text-gray-600">
    <%# show who last viewed (current user) and their local time if available %>
    <% viewer = (defined?(current_user) && current_user) ? (current_user.respond_to?(:name) ? current_user.name : current_user.email) : "User" %>
    <% tz = (defined?(current_user) && current_user.respond_to?(:time_zone) && current_user.time_zone.present?) ? current_user.time_zone : Time.zone.name %>
    <span>Last seen by <strong><%= viewer %></strong> at <%= Time.current.in_time_zone(tz).strftime("%Y-%m-%d %H:%M") %> (<%= tz %>)</span>
  </div>

  <!-- System Summary -->
  <section>
    <h1 class="text-2xl font-bold mb-4">System Summary</h1>

    <% if @summary.present? %>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <% @summary.each do |label, value| %>
          <div class="bg-white border border-gray-200 rounded-lg p-4 shadow-sm">
            <p class="text-xs uppercase tracking-wide text-gray-500"><%= label %></p>
            <p class="text-2xl font-semibold mt-1"><%= value %></p>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500">Summary not available yet.</p>
    <% end %>
  </section>

  <!-- Charts -->
  <section>
    <h2 class="text-xl font-semibold mb-3">Trends</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6" data-controller="dashboard">
      <div class="bg-white border border-gray-200 rounded-lg p-4 shadow-sm">
        <h3 class="font-medium mb-2">Average Ping (last 14 days)</h3>
        <canvas data-dashboard-target="latencyChart"></canvas>
      </div>
      <div class="bg-white border border-gray-200 rounded-lg p-4 shadow-sm">
        <h3 class="font-medium mb-2">% Unhealthy Stations (last 14 days)</h3>
        <canvas data-dashboard-target="healthChart"></canvas>
      </div>
    </div>
  </section>

  <!-- Flagged stations -->
  <section>
    <h2 class="text-xl font-semibold mb-3">‚ö†Ô∏è Flagged Stations</h2>

    <% if @flagged_stations.present? && @flagged_stations.any? %>
      <div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Station</th>
              <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Last Ping</th>
              <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Recent Failures</th>
              <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Reason</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @flagged_stations.each do |row| %>
              <tr>
                <td class="px-4 py-2"><%= link_to(row[:station].name.presence || "Station ##{row[:station].id}", station_path(row[:station])) %></td>
                <td class="px-4 py-2"><%= row[:last_ping_at]&.in_time_zone&.strftime("%Y-%m-%d %H:%M") || "‚Äî" %></td>
                <td class="px-4 py-2"><%= row[:recent_failures] %></td>
                <td class="px-4 py-2"><%= row[:reason] %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-gray-500">None flagged.</p>
    <% end %>
  </section>


  <!-- Spotlight -->
  <section data-controller="dashboard">
    <h2 class="text-xl font-semibold mb-3">üéØ Station Spotlight</h2>

    <% if @random_spotlight.present? %>
      <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4" id="spotlightGrid">
        <% @random_spotlight.each do |station| %>
          <%= render "dashboard/station_spotlight", station: station %>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500">No stations to show yet.</p>
    <% end %>
  </section>

</div>
